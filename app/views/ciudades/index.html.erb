<!-- Main content -->
<section class="content">
  <div class="box-body">

    <div class="row">
       <div class="col-md-3">
        <%= link_to 'Nuevo Registro', new_ciudade_path, :class=>"btn btn-block btn-primary" %>
      </div>
    </div>

     


    <table id="example2" class="table table-bordered table-striped">
      <thead>
      <tr>

        <th>CUIDAD</th>
        <th>ESTADO</th>
        <th>KILOMETROS</th>
        <th>Accciones</th>
      </tr>
      </thead>

      <tbody>
     <% @ciudades.each do |ciudade| %>
          <tr>

            <td><%= ciudade.CD_NOMBRE %></td>
<td>
  <% url = (((Estado.find(ciudade.PKESTADO) rescue nil).nil? or (Estado.find(ciudade.PKESTADO) rescue nil).blank?) ? "N/A" : Estado.find(ciudade.PKESTADO).EDO_DESCRIPCION) %>
  <%= url %>
</td>
            <td><%= ciudade.CD_KM %></td>
            <td>
              <a class="btn btn-success btn-xs" href="<%= edit_ciudade_path(ciudade) %>" ><i class="fa fa-fw fa-edit"></i></a>
              <%= link_to "<i class='fa fa-fw fa-close'></i>".html_safe, ciudade, method: :delete, data: { confirm: 'Esta Seguro?' }, class:'btn btn-danger btn-xs' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</section>



<script>
    $(function () {

        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>
