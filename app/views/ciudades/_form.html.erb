

<section class="content">
  <div class="box-body">

      <%= form_for(ciudade, :validate => true, html: {class: 'form-horizontal'}) do |f| %>
        <% if ciudade.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(ciudade.errors.count, "error") %> prohibited this ciudad from being saved:</h2>

            <ul>
            <% ciudade.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
      <% end %>
          <div class="row">
           <div class="col-md-12" style="text-align: right;">
             <%= f.submit :class=>"btn btn-md btn-primary", :value=>"Guardar" %>
              <%= link_to 'Cancelar', ciudades_path, :class=>"btn btn-md btn-default cancelbtn" %>
            </div>
           
          </div>
        <div class="row">
        <div class="col-md-6">
          <div class="form-group">
             <label>CIUDAD</label>
            <%= f.text_field :CD_NOMBRE, :class=>"form-control" %>
          </div>
        </div>
  
          <div class="col-md-6">
            &nbsp;
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
               <label>ESTADO</label>
            <%= f.collection_select :PKESTADO, Estado.order(:EDO_DESCRIPCION), :PKESTADO, :EDO_DESCRIPCION, include_blank: true %>
            </div>
          </div>

          <div class="col-md-3 country-catlog-check">
            <div class="form-group">
             
            <div class="checkbox icheck">
              <label>
                <%= f.check_box :VALOR_OMISION %>
                <label>VALOR POR DEFAULT</label>

              </label>
            </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
               <label>KILOMETROS </label>
           <%= f.text_field :CD_KM, :class=>"form-control onlyNumber" %>
            </div>
          </div>
         
           <div class="col-md-9">
            &nbsp;
          </div>
        </div>
      <% end %>
        <!-- /.row -->
  </div>
</section>
<script type="application/javascript">
    $(document).ready(function () {
        $("#ciudade_PKESTADO").addClass("form-control");
    });
</script>