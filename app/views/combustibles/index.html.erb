<!-- Main content -->
<section class="content">
  <div class="box-body">

    <div class="row">
       <div class="col-md-3">
        <%= link_to 'Nuevo Registro', new_combustible_path, :class=>"btn btn-block btn-primary" %>
      </div>
    </div>

     

    <table id="example2" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>COMBUSTIBLE</th>
        <th>FECHA INICIO</th>
        <th>FECHA FIN</th>
        <th>PRECIO</th>
        <th> Acciones</th>
      </tr>
      </thead>

      <tbody>
     <% @combustibles.each do |combustible| %>
          <tr>
            <td><%= combustible.COM_DESCRIPCION %></td>
             <td><%= combustible.COM_FINICIO.strftime("%d/%m/%Y") %></td>
              <td><%= combustible.COM_FFIN.strftime("%d/%m/%Y") %></td>
               <td><%= combustible.COM_PRECIO %></td>
           
            <td>

              <a class="btn btn-success btn-xs" href="<%= edit_combustible_path(combustible) %>"><i class="fa fa-fw fa-edit"></i></a>
              <%= link_to "<i class='fa fa-fw fa-close'></i>".html_safe, combustible, method: :delete, data: { confirm: 'Esta Seguro?' }, class:'btn btn-danger btn-xs' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</section>


<script>
    $(function () {

        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>
