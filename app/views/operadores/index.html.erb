
<!-- Main content -->
<section class="content">
  <div class="box-body">

    <div class="row">
      <div class="col-md-3">
        <%= link_to 'Nuevo Registro', new_operadore_path, :class=>"btn btn-block btn-primary" %>
      </div>
    </div>

     

    <table id="example2" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>CLAVE</th>
          <th>NOMBRE OPERADOR</th>
            <th>FECHA INGRESO</th>
              <th>LIC ESTATAL</th>
                <th>ESTADO</th>
        <th> Acciones</th>
      </tr>
      </thead>

      <tbody>
      <% @operadores.each do |operadore| %>
          <tr>
           <td><%= operadore.OP_CLAVE %></td>
            <td><%= operadore.OP_NOMBRE %></td>
              <td><%= operadore.OP_INGRESO %></td>
                <td><%= operadore.OP_LICESTATAL %></td>
                  <td><%= operadore.OP_CLAVE %></td>

           
            <td>


              <a class="btn btn-success btn-xs" href="<%= edit_operadore_path(operadore) %>" ><i class="fa fa-fw fa-edit"></i></a>
              <%= link_to "<i class='fa fa-fw fa-close'></i>".html_safe, operadore, method: :delete, data: { confirm: 'Esta Seguro?' }, class:'btn btn-danger btn-xs' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</section>


<script>
    $(function () {

        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>
