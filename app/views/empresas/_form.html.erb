            &nbsp;
            </div>
          </div>
  
  
       
   <div class="row">
        <div class="col-md-6">
          <div class="form-group">
             <label>RAZON SOCIAL</label>
            <%= f.text_field :EMP_RAZON_SOCIAL, :class=>"form-control" %>
          </div>
        </div>
