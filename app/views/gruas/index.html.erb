<!-- Main content -->
<section class="content">
  <div class="box-body">

    <div class="row">
      <div class="col-md-3">
        <%= link_to 'Nuevo Registro', new_grua_path, :class=>"btn btn-block btn-primary" %>
      </div>
    </div>

     


    <table id="example2" class="table table-bordered table-striped">
      <thead>
      <tr>

        <th>CODIGO</th>
        <th>DESCRIPCION</th>
        <th>CAPACIDAD</th>
        <th>EMPRESA</th>
        <th>STATUS</th>
        <th>PLACAS EST.</th>
        <th>Accciones</th>
      </tr>
      </thead>

      <tbody>
    <% @gruas.each do |grua| %>
          <tr>

            <td><%= grua.GR_CLAVE %></td>
             <td><%= grua.GR_DESCRIPCION %></td>
               <td><%= grua.GR_CAPACIDAD %></td>

             
<td>
  <% empresa = (((Empresa.find(grua.PKEMPRESA) rescue nil).nil? or (Empresa.find(grua.PKEMPRESA) rescue nil).blank?) ? "N/A" : Empresa.find(grua.PKEMPRESA).EMP_NOMBRE_COMERCIAL) %>
  <%= empresa %>
</td>
            <td><%= grua.GR_ESTADO %></td>

             <td><%= grua.GR_PLACAESTATAL %></td>

            <td>
              <a class="btn btn-success btn-xs" href="<%= edit_grua_path(grua) %>" ><i class="fa fa-fw fa-edit"></i></a>
              <%= link_to "<i class='fa fa-fw fa-close'></i>".html_safe, grua, method: :delete, data: { confirm: 'Esta Seguro?' }, class:'btn btn-danger btn-xs' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</section>



<script>
    $(function () {

        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>

