 


<div class="login-box">
  
  <!-- /.login-logo -->
  <div class="login-box-body">
    <div class="login-logo">
      <a href="javascript:void(0)"></a>
    </div>

    <h1>TOW CONTROL</h1>

<%= form_for(resource, :validate => true, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

 <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
      <div class="form-group has-feedback">
        <%= f.password_field :password, autocomplete: "off", :class =>"form-control", placeholder: "NUEVO CONTRASENA" %> <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> Mínimo de caracteres)</em><br />
    <% end %>
        
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
        
    <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class =>"form-control", placeholder: "CONFIRMAR CONTRASENA" %> <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> Mínimo de caracteres)</em><br />
    <% end %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

       <div class="form-group login-form-btn-sec">
        <%= f.submit "Submit",:class => "btn btn-primary btn-md btn-flat" %>
      <%= link_to "Login", admin_session_path(resource),:class => "btn btn-default btn-md btn-flat"  %>
      </div>
    <% end %>



  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

