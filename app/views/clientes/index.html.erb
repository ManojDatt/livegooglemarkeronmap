<!-- Main content -->
<section class="content">
  <div class="box-body">

    <div class="row">
      <div class="col-md-3">
        <%= link_to 'Nuevo Registro', new_cliente_path, :class=>"btn btn-block btn-primary" %>
      </div>
    </div>

     


    <table id="example2" class="table table-bordered table-striped">
      <thead>
      <tr>

        <th>NOMBRE / RAZON SOCIAL</th>
        <th>RFC</th>
        <th>DOMICILIO</th>
        <th>Accciones</th>
      </tr>
      </thead>

      <tbody>
      <% @clientes.each do |cliente| %>
          <tr>

            <td><%= cliente.NOMBRE %></td>
             <td><%= cliente.RFC %></td>
              <td><%= cliente.DOMICILIO %></td>

           
            <td>
              <a class="btn btn-success btn-xs" href="<%= edit_cliente_path(cliente) %>" ><i class="fa fa-fw fa-edit"></i></a>
              <%= link_to "<i class='fa fa-fw fa-close'></i>".html_safe, cliente, method: :delete, data: { confirm: 'Esta Seguro?' }, class:'btn btn-danger btn-xs' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</section>



<script>
    $(function () {

        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>

