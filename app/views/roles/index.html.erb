<!-- Main content -->
<section class="content">
  <div class="box-body">
    <div class="row">
      <div class="col-md-3">
        <%= link_to 'Nuevo Rol', new_role_path, :class=>"btn btn-block btn-primary" %>
      </div>
    </div>

 


    <table id="example2" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Action</th>
      </tr>
      </thead>

      <tbody>
      <% @roles.each do |role| %>
          <tr>
            <td><%= role.name %></td>
            <!--<td><%= link_to 'Show', role %></td>-->
            <td>
              <a class="btn btn-success btn-xs" href="<%= edit_role_path(role) %>" title="Edit"><i class="fa fa-fw fa-edit"></i></a>

              <%= link_to "<i class='fa fa-fw fa-close'></i>".html_safe, role, method: :delete, data: { confirm: 'Esta Seguro?' }, class:'btn btn-danger btn-xs' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</section>

<script>
    $(function () {

        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>