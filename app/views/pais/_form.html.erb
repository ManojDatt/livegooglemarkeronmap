<section class="content">
  <div class="box-body country-catlog">
    <%= form_for(pai, :validate => true, html: {class: 'form-horizontal'}) do |f| %>
        <% if pai.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(pais.errors.count, "error") %>

                prohibited this pais from being saved:</h2>

              <ul>
                <% pai.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="row"><!-- mar-btn-area -->
         <div class="col-md-12" style="text-align: right;">
          <%= f.submit :class=>"btn btn-md btn-primary", :value=>"Guardar" %>
            <%= link_to 'Cancelar', pais_path, :class=>"btn btn-md btn-default cancelbtn" %>

          </div>
          <div class="col-md-1 pull-right">
           

          </div>
        </div>

    <div class="row">
      <div class="col-md-6">
        <div class="field form-group">
          <label>PAIS</label>
            <%= f.text_field :PA_DESCRIPCION ,:class=>"form-control", :required=>"" %>
        </div>
      </div>
    </div>
        <div class="row">
          <div class="col-md-3">
            <div class="field form-group">
              <label>CODIGO INT.</label> <%= f.text_field :CODIGOINT ,:class=>"form-control", :required=>"" %>
            </div>
          </div>
          <div class="col-md-3 country-catlog-check">
            <div class="field form-group">
          <label><input type="checkbox"/> VALOR POR DEFAULT</label>
            </div>

          </div>
          <div class="col-md-6">
            &nbsp;
          </div>
        </div>
    <% end %>
  </div>
</section>
