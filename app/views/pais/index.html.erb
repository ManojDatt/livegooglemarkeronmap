
<!-- Main content -->
<section class="content">
  <div class="box-body">
    <div class="row">
     <div class="col-md-3">
        <%= link_to 'Nuevo Registro', new_pai_path, :class=>"btn btn-block btn-primary" %>
      </div>
    </div>

     

    <table id="example2" class="table table-bordered table-striped">
