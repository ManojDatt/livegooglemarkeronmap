
<!-- Main content -->
<section class="content">
  <div class="box-body">

    <div class="row">
      <div class="col-md-3">
        <%= link_to 'Nuevo Parametro', new_configuracione_path, :class=>"btn btn-block btn-primary" %>
      </div>
    </div>
     
    <table id="example2" class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>LLave</th>
        <th>VALOR</th>
        <th>Acciones</th>
      </tr>
      </thead>

      <tbody>
    <% @configuraciones.each do |configuracione| %>
          <tr>
            <td><%= configuracione.Llave %></td>
            <td><%= configuracione.Valor %></td>
            <td>
              <a class="btn btn-success btn-xs" href="<%= edit_configuracione_path(configuracione) %>"><i class="fa fa-fw fa-edit"></i></a>

              <%= link_to "<i class='fa fa-fw fa-close'></i>".html_safe, configuracione, method: :delete, data: { confirm: 'Esta Seguro?' }, class:'btn btn-danger btn-xs' %>

            </td>
          </tr>
      <% end %>
      </tbody>
    </table>


  </div>
</section>

<script>
    $(function () {

        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>
