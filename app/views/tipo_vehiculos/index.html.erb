
<!-- Main content -->
<section class="content">
  <div class="box-body">

    <div class="row">
      <div class="col-md-3">
        <%= link_to 'Nuevo Registro', new_tipo_vehiculo_path, :class=>"btn btn-block btn-primary" %>
      </div>
    </div>

     

    <table id="example2" class="table table-bordered table-striped">
      <thead>
      <tr>
      
        <th>TIPO DE VEHICULO</th>
        <th>CATEGORIA</th>
        <th> Acciones</th>
      </tr>
      </thead>

      <tbody>
       <% @tipo_vehiculos.each do |tipo_vehiculo| %>
          <tr>
            <td><%= tipo_vehiculo.TAUT_DESCRIPCION %></td>
           <td>
             

             <% category = (((CategoriasVehiculo.find(tipo_vehiculo.PKCATEGORIA) rescue nil).nil? or (CategoriasVehiculo.find(tipo_vehiculo.PKCATEGORIA) rescue nil).blank?) ? "N/A" : CategoriasVehiculo.find(tipo_vehiculo.PKCATEGORIA).CAT_DESCRIPCION) %>
  <%= category %>
           </td>


            <td>

              <a class="btn btn-success btn-xs" href="<%= edit_tipo_vehiculo_path(tipo_vehiculo) %>" ><i class="fa fa-fw fa-edit"></i></a>
              <%= link_to "<i class='fa fa-fw fa-close'></i>".html_safe, tipo_vehiculo, method: :delete, data: { confirm: 'Esta Seguro?' }, class:'btn btn-danger btn-xs' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</section>


<script>
    $(function () {

        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>
