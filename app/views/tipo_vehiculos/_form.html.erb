            </div>
           
          </div>
        <div class="row">
        <div class="col-md-6">
          <div class="form-group">
             <label>TIPO DE VEHICULO</label>
            <%= f.text_field :TAUT_DESCRIPCION, :class=>"form-control" %>
          </div>
        </div>
  
          <div class="col-md-6">
            &nbsp;
          </div>
        </div>

        <div class="row">

          <div class="col-md-3">
            <div class="form-group">
              <label>CATEGORIA</label>
           
             <%= f.collection_select :PKCATEGORIA, CategoriasVehiculo.order(:CAT_DESCRIPCION), :PKCATEGORIA, :CAT_DESCRIPCION %>
            </div>
          </div>

         
           <div class="col-md-6">
            &nbsp;
          </div>
        </div>

       
      <% end %>
        <!-- /.row -->
  </div>
</section>

