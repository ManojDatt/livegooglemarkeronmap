<section class="content">
  <div class="box-body">


      <%= form_for(tipo_vehiculo, :validate => true, html: {class: 'form-horizontal'}) do |f| %>
         <% if tipo_vehiculo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tipo_vehiculo.errors.count, "error") %> prohibited this tipo_vehiculo from being saved:</h2>

      <ul>
      <% tipo_vehiculo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
          <div class="row">
            <div class="col-md-12" style="text-align: right;">
              <%= f.submit :class=>"btn btn-md btn-primary", :value=>"Guardar" %>
