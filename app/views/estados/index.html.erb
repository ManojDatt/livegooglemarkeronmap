<!-- Main content -->
<section class="content">
  <div class="box-body">

    <div class="row">
       <div class="col-md-3">
        <%= link_to 'Nuevo Registro', new_estado_path, :class=>"btn btn-block btn-primary" %>
      </div>
    </div>

     

    <table id="example2" class="table table-bordered table-striped">
      <thead>
      <tr>
        <!--<th>Pkpais</th>-->
        <!--<th>Pkestado</th>-->
        <th>ESTADOS</th>
        <th>PAIS</th>
        <th>ABREVIATURA</th>
        <th> Acciones</th>
      </tr>
      </thead>

      <tbody>
      <% @estados.each do |estado| %>
          <tr>
            <!--<td><%= estado.PKPAIS %></td>-->
            <!--<td><%= estado.PKESTADO %></td>-->
            <td><%= estado.EDO_DESCRIPCION %></td>
            <td>
              <% url = (((Pai.find(estado.PKPAIS) rescue nil).nil? or (Pai.find(estado.PKPAIS) rescue nil).blank?) ? "N/A" : Pai.find(estado.PKPAIS).PA_DESCRIPCION) %>
              <%= url %>

            </td>




            <td><%= estado.ABREVIATURA %></td>
            <!--<td><%= link_to 'Show', estado %></td>-->
            <td>


              <a class="btn btn-success btn-xs" href="<%= edit_estado_path(estado) %>" ><i class="fa fa-fw fa-edit"></i></a>
              <%= link_to "<i class='fa fa-fw fa-close'></i>".html_safe, estado, method: :delete, data: { confirm: 'Esta Seguro?' }, class:'btn btn-danger btn-xs' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</section>


<script>
    $(function () {

        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>